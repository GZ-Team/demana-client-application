{
  "name": "demana-client-application",
  "version": "1.0.0",
  "description": "An Electron application with Vue and TypeScript",
  "main": "./out/main/index.js",
  "author": "Demana Team",
  "homepage": "https://www.demana.digital",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "electron-builder install-app-deps",
    "dev": "electron-vite dev",
    "dev:watch": "electron-vite dev --watch",
    "preview": "electron-vite preview",
    "test": "pnpm test:jest && pnpm test:playwright",
    "test:jest": "jest",
    "test:playwright": "pnpm exec playwright test",
    "test:playwright:ui": "pnpm exec playwright test --ui",
    "prepare": "pnpm run type-check && pnpm test",
    "build": "electron-vite build",
    "build:windows": "pnpm run build && electron-builder --win --config",
    "build:mac": "pnpm run build && electron-builder --mac --config",
    "build:linux": "pnpm run build && electron-builder --linux --config",
    "prettier": "prettier --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue",
    "lint:fix": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
    "type-check:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "type-check:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
    "type-check": "pnpm run type-check:web"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^1.0.2",
    "@gz-team/esc-pos": "1.0.4-alpha",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "electron-updater": "^5.3.0",
    "pinia": "^2.1.7",
    "vite-plugin-vuetify": "^2.0.1",
    "vue-i18n": "^9.9.0",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.10"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron/notarize": "^1.2.4",
    "@jest/globals": "^29.7.0",
    "@mdi/font": "^7.4.47",
    "@playwright/test": "^1.41.1",
    "@rushstack/eslint-patch": "^1.7.0",
    "@types/dom-serial": "^1.0.6",
    "@types/node": "^18.19.8",
    "@types/w3c-web-usb": "^1.0.10",
    "@types/web": "^0.0.135",
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "electron": "^24.8.8",
    "electron-builder": "^24.9.1",
    "electron-devtools-installer": "^3.2.0",
    "electron-vite": "^1.0.29",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "jest": "^29.7.0",
    "prettier": "^2.8.8",
    "sass": "^1.69.7",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^4.5.1",
    "vue": "^3.4.14",
    "vue-tsc": "^1.8.27",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  }
}